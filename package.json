{
  "name": "bbcms-api",
  "version": "1.0.0",
  "description": "bbCMS API Gateway",
  "main": "index.js",
  "scripts": {
    "api": "gulp compile && node dist/index.js",
    "dev": "gulp",
    "migrations:run": "./node_modules/.bin/sequelize db:migrate",
    "migrations:undo": "./node_modules/.bin/sequelize db:migrate:undo:all",
    "seeds:run": "./node_modules/.bin/sequelize db:seed:all",
    "start": "npm run api",
    "start:staging": "npm run migrations:undo && npm run migrations:run && npm run seeds:run && npm start",
    "test": "PORT=4000 NODE_ENV=test ../node_modules/.bin/mocha api/test/api/index.js --exit"
  },
  "keywords": [
    "bbcms",
    "api",
    "gateway"
  ],
  "author": "Piotr Bienias",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^1.3.7",
    "@types/uuid": "^3.4.4",
    "axios": "^0.18.1",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.4",
    "dotenv": "^6.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.0",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.3",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.8.7",
    "sequelize-cli": "^5.4.0",
    "slugify": "^1.3.4",
    "typedi": "^0.8.0",
    "underscore": "^1.9.1",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie-parser": "^1.4.1",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.0",
    "@types/history": "^4.7.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/underscore": "^1.8.18",
    "chai": "*",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.4.2",
    "gulp-typescript": "^5.0.1",
    "mocha": "^5.2.0",
    "supertest": "^3.4.2",
    "ts-import-plugin": "^1.5.5",
    "ts-loader": "^6.0.2",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "typescript": "^3.5.1"
  },
  "_moduleAliases": {
    "@system": "dist/api/modules/system",
    "@i18n": "dist/api/modules/i18n",
    "@config": "dist/api/config",
    "@lib": "dist/api/lib"
  }
}
